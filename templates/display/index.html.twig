{% extends 'base.html.twig' %}

{% block title %}Hello DisplayController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<header>

    <a href="{{ path('app_logout')}}"><button>Se déconnecter</button></a>

</header>

<div class="example-wrapper">
    <h1>Hello {{ app.user.pseudo }}! ✅</h1>

        <ul>
            <li>Mail : {{ app.user.email }}</li>
            <li>amount : {{ app.user.wallet.amount }}</li>

            {% for address in app.user.addresses %}
                <li>adresse : {{ address.street }}, {{ address.zip }} {{ address.city }}</li>
            {% endfor %}
            
        </ul>

    <a href="{{ path('app_address_index')}}"><button>crud adresses</button></a>

    
</div>
{% endblock %}
